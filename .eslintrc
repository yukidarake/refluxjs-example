{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "destructuring": true
  },
  "rules": {
    "strict": 2,

    "default-case": 2,
    "no-self-compare": 2,
    "no-else-return": 2,
    "no-throw-literal": 2,
    "no-void": 2,

    "max-params": [1, 5],
    "max-depth": [1, 3],
    "max-len": [1, 100, 2],
    "complexity": [1, 11],
    "indent": [1, 2],

    "comma-style": [2, "last"],
    "comma-dangle": 0,
    "brace-style": [2, "1tbs", { "allowSingleLine": false }],
    "consistent-this": [0, "self"],

    "space-in-brackets": [0, "always", {
      "singleValue": true,
      "propertyName": false
    }],
    "space-before-function-parentheses": [2, "never"],
    "space-before-blocks": [2, "always"],
    "space-after-keywords": [2, "always"],
    "no-underscore-dangle": 0,
    "new-cap": 0,
    "no-new-require": 2,
    "no-lonely-if": 2,
    "no-nested-ternary": 2,
    "no-multiple-empty-lines": [2, {
      "max": 2
    }],
    "no-unused-expressions": 0,
    "no-unused-vars": [2, {"vars": "all", "args": "none"}],
    "no-use-before-define": 0,
    "quotes": [2, "single"],
    "no-multi-spaces": [2, {
      "exceptions": {
        "Property": true,
        "ImportDeclaration": true,
        "VariableDeclarator": true,
        "AssignmentExpression": true
      }
    }],
    "key-spacing": [2, {
      "beforeColon": false,
      "afterColon": true
    }]
  }
}
